{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true
  }
}
